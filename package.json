{
  "name": "laythe",
  "displayName": "Laythe",
  "description": "Laythe language extension for vscode",
  "author": "John Chabot",
  "publisher": "JohnChabot",
  "license": "MIT",
  "icon": "images/laythe_icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Laythe-lang/Laythe-vscode"
  },
  "bugs": {
    "url": "https://github.com/Laythe-lang/Laythe-vscode/issues"
  },
  "galleryBanner": {
    "color": "#004d99",
    "theme": "dark"
  },
  "version": "0.0.15",
  "engines": {
    "vscode": "^1.46.0"
  },
  "keywords": [
    "Programming language",
    "Laythe",
    "language-server",
    "dynamic"
  ],
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lay"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "laythe",
        "extensions": [
          ".lay"
        ],
        "configuration": "./laythe.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "laythe",
        "scopeName": "source.lay",
        "path": "./syntaxes/language-laythe.json"
      }
    ]
  },
  "homepage": "https://github.com/Laythe-lang/Laythe#readme",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.46.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^13.11.0",
    "eslint": "^7.32.0",
    "@typescript-eslint/parser": "^4.28.5",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "glob": "^7.1.7",
    "mocha": "^9.0.3",
    "typescript": "^4.3.5",
    "vscode-test": "^1.6.1"
  }
}
